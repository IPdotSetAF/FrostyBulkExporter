<ctrl:FrostyMessageBox x:Class="BulkExporterPlugin.Windows.BulkExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BulkExporterPlugin.Windows"
        xmlns:ctrl="clr-namespace:Frosty.Controls;assembly=FrostyControls"
        xmlns:core="clr-namespace:Frosty.Core.Controls;assembly=FrostyCore"
        mc:Ignorable="d"
        Title="Bulk Export" Height="auto" Width="300" ResizeMode="NoResize" FrostyLoaded="FrostyMessageBox_FrostyLoaded" WindowStartupLocation="CenterScreen" Background="{StaticResource WindowBackground}">

    <ctrl:FrostyMessageBox.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/FrostyControls;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ctrl:FrostyMessageBox.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Grid.Row="0">
            <CheckBox  Margin="0, 2, 0, 0" BorderThickness="1" VerticalContentAlignment="Center"></CheckBox>
            <Label Content="Export Meshes" Margin="0, 2, 0, 0" FontFamily="Global User Interface"></Label>
        </DockPanel>
        <DockPanel Grid.Column="0" Grid.Row="1">
            <CheckBox  Margin="0, 2, 0, 0" BorderThickness="1" VerticalContentAlignment="Center"></CheckBox>
            <Label Content="Export Skinned Meshes" Margin="0, 2, 0, 0" FontFamily="Global User Interface"></Label>
        </DockPanel>
        <DockPanel Grid.Column="0" Grid.Row="2">
            <CheckBox  Margin="0, 2, 0, 0" BorderThickness="1" VerticalContentAlignment="Center"></CheckBox>
            <Label Content="Export Textures" Margin="0, 2, 0, 0" FontFamily="Global User Interface"></Label>
        </DockPanel>
        <DockPanel Grid.Column="0" Grid.Row="3">
            <CheckBox  Margin="0, 2, 0, 0" BorderThickness="1" VerticalContentAlignment="Center"></CheckBox>
            <Label Content="Export Audio" Margin="0, 2, 0, 0" FontFamily="Global User Interface"></Label>
        </DockPanel>
        
        <Border Grid.Column="1" Grid.Row="4"  Background="{StaticResource ControlBackground}"
        Margin="1 0 0 0"
        RenderOptions.EdgeMode="Aliased">
            <StackPanel Orientation="Horizontal"
                Margin="6,2,6,2">
                <Button
                Margin="0"
                ToolTip="Export selected files."
                IsEnabled="true">
                    <StackPanel Orientation="Horizontal"
                        Margin="4 0 4 0">
                        <Image Grid.Column="0"
                       Source="pack://application:,,,/BulkExporterPlugin;component/Images/BulkExporter.png"
                       Width="16" />
                        <TextBlock Grid.Column="1"
                           Text="Export"
                           VerticalAlignment="Center"
                           Margin="4 0 0 0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</ctrl:FrostyMessageBox>
